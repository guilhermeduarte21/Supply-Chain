@model SupplyChain.Models.Mercadoria

@{
    ViewData["Title"] = "Details";
}

<div class="row mt-5 d-flex justify-content-center text-light">
    <div class="col-md-4">
        <div class="card-header d-flex justify-content-between bg-dark rounded-top border-bottom border-light">
            <div class="container-fluid text-center">
                <h3>@Html.DisplayFor(model => model.Nome)</h3>
            </div>

            <a asp-action="Edit" asp-route-id="@Model?.Id">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-pencil-square text-warning" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                </svg>
            </a>
        </div>

        <div class="card-body bg-dark rounded-bottom border border-dark">
            <div class="row">
                <div>
                    @Html.DisplayNameFor(model => model.NumeroRegistro):
                    @Html.DisplayFor(model => model.NumeroRegistro)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Fabricante):
                    @Html.DisplayFor(model => model.Fabricante)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Tipo):
                    @Html.DisplayFor(model => model.Tipo)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.Descricao):
                    @Html.DisplayFor(model => model.Descricao)
                </div>
                <div>
                    @Html.DisplayNameFor(model => model.QuantidadeEstoque):
                    @Html.DisplayFor(model => model.QuantidadeEstoque)
                </div>
            </div>

            <div class="d-flex justify-content-around mt-3">
                <input type="Button" class="btn btn-info mt-2" value="Voltar" onclick="location.href='@Url.Action("Index", "Mercadoria")'" />
            </div>
        </div>
    </div>
</div>
